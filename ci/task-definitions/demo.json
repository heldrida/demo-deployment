{
    "family": "TASK_NAME",
    "containerDefinitions": [
        {
            "logConfiguration": {
                "logDriver": "sumologic",
                "options": {
                    "sumo-url": "SUMO_URL",
                    "sumo-source-category": "ENVIRONMENT/SUMO_CATEGORY"
                }
            },

            "environment": [],
            "name": "CONTAINER_NAME",
            "image": "DOCKER_IMAGE",
            "cpu": 100,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 80
                }
            ],
            "essential": true,
          "secrets": [
            {
              "name": "DB_HOST",
              "valueFrom": "arn:aws:ssm:AWS_DEFAULT_REGION:AWS_ACCOUNT_ID:parameter/TASK_NAME/DBHOST"
            },
            {
              "name": "DB_USER",
              "valueFrom": "arn:aws:ssm:AWS_DEFAULT_REGION:AWS_ACCOUNT_ID:parameter/TASK_NAME/DBUSER"
            },
            {
              "name": "DB_PASSWORD",
              "valueFrom": "arn:aws:ssm:AWS_DEFAULT_REGION:AWS_ACCOUNT_ID:parameter/TASK_NAME/DBPASSWORD"
            },
            {
              "name": "DB_NAME",
              "valueFrom": "arn:aws:ssm:AWS_DEFAULT_REGION:AWS_ACCOUNT_ID:parameter/TASK_NAME/DBNAME"
            },
          ]
        }
    ]
}
